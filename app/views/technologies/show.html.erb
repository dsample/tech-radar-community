<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @technology.category.name %>
</p>

<p>
  <b>Name:</b>
  <%= @technology.name %>
</p>

<p>
  <b>Summary:</b>
  <%= @technology.summary %>
</p>

<p>
  <b>Description:</b>
  <%= @technology.description %>
</p>

<% if @technology.product_technologies.count > 0 %>
<p>
	<strong>Products using this:</strong>
	<% @products_using_this.each do |product| %>
		<%= product.name %>
	<% end %>
</p>
<% end %>

<% if @products_not_using_this.count > 0 %>
<p>
	<strong>Products not using this yet:</strong>
	<% @products_not_using_this.each do |product| %>
		<%= product.name %>
	<% end %>
</p>
<% end %>

<h2>Comments</h2>

<%= render :partial => 'comments/comments' %>
<%= render :partial => 'comments/form' %>

<%= link_to 'Edit', edit_technology_path(@technology) %> |
<%= link_to 'Back', technologies_path %>
