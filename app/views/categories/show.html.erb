<p id="notice"><%= notice %></p>

<div class="button-bar">
	<div class="button-group">
		<%= link_to 'Back', categories_path, class: 'small secondary button' %>
	</div>
	<div class="button-group">
		<%= link_to 'Edit', edit_category_path(@category), class: 'small button' %>
	</div>
</div>

<h2><%= @category.name.pluralize %></h2>

<div><%= md @category.description %></div>

<% if @category.technologies.count > 0 %>
	<h3>Technologies</h3>

	<dl class="no-bullet">
		<% @category.technologies.each do |tech| %>
			<dt><%= link_to(tech.name, tech) %></dt>
			<dd><%= md tech.summary.to_s %></dd>
		<% end %>
	</dl>
<% end %>