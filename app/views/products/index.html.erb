<h1>Products</h1>

<div class="button-bar">
  <ul class="button-group">
    <li><%= link_to 'Create Product', new_product_path, :class => ['small', 'button'] %></li>
  </ul>
</div>

<% if @products.count > 0 %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td>
          <%= link_to image_tag('pencil.png', alt: 'Edit product', title: 'Edit product' ), edit_product_path(product), class: 'small secondary inline button' %>
          <%= link_to image_tag('delete.png', alt: 'Delete product', title: 'Delete product' ), product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'small secondary inline button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p class="secondary alert-box">There are no products yet&hellip; <%= link_to 'create one', new_product_path %>.</p>
<% end %>